{
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "grant_type": {
          "type": "string",
          "enum": [
            "authorization_code"
          ]
        },
        "client_id": {
          "type": "string",
          "pattern": "^[0-9a-f]{24}$"
        },
        "redirect_uri": {
          "type": "string",
          "format": "uri"
        },
        "code_verifier": {
          "type": "string"
        },
        "code": {
          "type": "string"
        }
      },
      "required": [
        "grant_type",
        "client_id",
        "redirect_uri",
        "code_verifier",
        "code"
      ]
    },
    {
      "type": "object",
      "properties": {
        "grant_type": {
          "type": "string",
          "enum": [
            "refresh_token"
          ]
        },
        "client_id": {
          "type": "string",
          "pattern": "^[0-9a-f]{24}$"
        },
        "refresh_token": {
          "type": "string"
        }
      },
      "required": [
        "grant_type",
        "client_id",
        "refresh_token"
      ]
    }
  ]
}
